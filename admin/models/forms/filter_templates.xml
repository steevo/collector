<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
		name="collection"
		type="collections"
		label="COM_COLLECTOR_FILTER_COLLECTION"
		description="JOPTION_FILTER_COLLECTION_DESC"
		onchange="this.form.submit();"
	/>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_COLLECTOR_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="client"
			type="list"
			label="COM_COLLECTOR_TEMPLATE_CLIENT_LABEL"
			description="COM_COLLECTOR_TEMPLATE_CLIENT_LABEL_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_COLLECTOR_SELECT_TEMPLATE_CLIENT</option>
			<option value="0">COM_COLLECTOR_TEMPLATE_CLIENT_LISTING_LABEL</option>
			<option value="1">COM_COLLECTOR_TEMPLATE_CLIENT_DETAILS_LABEL</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_COLLECTOR_LIST_LIMIT"
			description="COM_COLLECTOR_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>